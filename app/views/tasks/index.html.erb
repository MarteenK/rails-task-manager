<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <% if task.completed == false %>
      <li><input type="checkbox"><%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task), method: :delete %></li>
  <% else %>
      <li><input type="checkbox" checked><%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task), method: :delete %> </li>
      <% end %>
  <% end %>
</ul>

<%= link_to "Create a new task", new_task_path %>
